@import "../../variables.styl"
.flexbox
    display: -webkit-box;
    display: -webkit-flex;
    display: flex;
.none
    display none
img
    display block
    width 100%
.auth-picture
    background-color #fff
    padding 0 (26rem/$fz) (70rem/$fz) (26rem/$fz)
    margin-top: (15rem/$fz)
    color $c22
    font-size (28rem/$fz)
    h3
        color $c12
        font-size 0.42667rem
        font-weight bold
        height (40rem/$fz)
        line-height (40rem/$fz)
        padding (50rem/$fz) 0 (16rem/$fz)   
    .auth-picture-item
        margin-top (70rem/$fz)
        &:first-child
            margin-top (36rem/$fz)
        .fileupload
            display block
            width 100%
            height 5.36rem 
            overflow hidden
        p
            font-size $t7
            line-height (40rem/$fz)
            margin-top (15rem/$fz)
.auth-protocol
    $hmin(99rem/$fz)
    background-color #fff
    margin-top (15rem/$fz)
    padding 0 (26rem/$fz)
    position relative
    font-size 0.32rem
    color #999999
    p
        margin-left: (59rem/$fz)
    a
        color #4dbd21
    i
        width (26rem/$fz)
        height (26rem/$fz)
        display block
        background url(http://m.mall.snail.com/globalCard/images/uncheck.png) 0 0 no-repeat
        background-size 100%
        position absolute
        left (26rem/$fz)
        top 50%
        margin-top: (-13rem/$fz)
    &.sel i    
        background-image:  url(http://m.mall.snail.com/globalCard/images/checked.png)
#authTips
    width: (660rem/$fz)
    .auth-tips-head
        $hmin(84rem/$fz)
        padding 0 (35rem/$fz)
        background-color $c33
        position: relative
        font-size: $t4
        color: $c12
        font-weight bold
        text-align: left
    .auth-tips-close
        width (30rem/$fz)
        height (30rem/$fz)
        display block
        position absolute
        right (35rem/$fz)
        top 50%
        margin-top -(15rem/$fz)
        background url(/static/images/tips-close.png) 0 0 no-repeat
        background-size 100%
    .auth-tips-content
        padding 0 (35rem/$fz)
        height 350px
        overflow auto
        font-size $t6
    p
        text-align left
        color $c12
        line-height: (40rem/$fz)
    .auth-tips-title
        margin-top (50rem/$fz)
    